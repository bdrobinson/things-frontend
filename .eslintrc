parser: babel-eslint
env:
  browser: true
  node: true
  jest/globals: true
plugins:
  - jest
  - flowtype
extends:
  - standard
  - standard-react
  - plugin:jest/recommended
  - plugin:flowtype/recommended
rules:
  no-unused-vars: 'warn'
  comma-dangle:
    - 'error'
    - 'always-multiline'
  indent:
    - 'error'
    - 4
  react/jsx-indent:
    - 'error'
    - 4
  react/jsx-indent-props:
    - 'error'
    - 4
